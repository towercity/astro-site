---
import BaseLayout from "../layouts/BaseLayout.astro";

import Header from "../components/Header.astro";

import Island from "../components/Island.astro";

const { pageTitle } = Astro.props;
---

<BaseLayout>
    <Header pageTitle={pageTitle} />
    <main class="content">
        <div class="left">
            <div class="left-content">
                <Island noPadding>
                    <img src="/img/side.jpg" width="500px" />
                </Island>
                <Island> hello </Island>
            </div>
        </div>
        <div class="right">
            <article class="page">
                <slot />
            </article>
        </div>
    </main>
</BaseLayout>

<style is:global>
    :root {
        color-scheme: light dark;

        font-size: 18px;

        --color-light: #ffecff;
        --color-dark: #01008c;

        --color-foreground: light-dark(var(--color-dark), var(--color-light));
        --color-background: light-dark(var(--color-light), var(--color-dark));
    }

    body {
        background-color: var(--color-background);
    }

    .with-shadow {
        background: var(--color-background);
        filter: drop-shadow(0.3em 0.3em 0em var(--color-foreground));
    }

    header {
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0.5em;
        position: fixed;
        z-index: 10;

        background-color: var(--color-background);
        color: var(--color-foreground);
        border-bottom: 1px solid var(--color-foreground);

        .header-links {
            ul {
                list-style: none;
                display: flex;
                gap: 0.5em;

                a {
                    color: var(--color-foreground);
                    text-decoration: none;
                }
            }
        }
    }

    main {
        padding-top: 2.5rem;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;

        > .left {
            padding-top: 8%;
            min-width: 506px;
            min-height: 706px;

            .left-content {
                position: fixed;
            }
        }

        > .right {
            min-width: 80rch;
        }
    }
</style>
