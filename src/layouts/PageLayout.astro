---
import ContentBlock from "../components/ContentBlock.astro";
import BlogLayout from "./BlogLayout.astro";
const { frontmatter: {
      title, tagline
} } = Astro.props;
---

<BlogLayout pageTitle={title}>
    <Fragment slot="info-column">
        <slot name="info-column" />
    </Fragment>  
    <ContentBlock title={tagline}>
        <slot />
    </ContentBlock>
</BlogLayout>

<style>
    .tags {
        display: flex;
    }

    .tag {
        margin: 0.25em;
    }
</style>
