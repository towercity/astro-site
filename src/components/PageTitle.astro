---
const { title } = Astro.props;
---

<style>
    .title {
        font-weight: lighter;
        color: #01008c;
    }

    .title a {
        color: #01008c;
    }

    @media screen and (max-width: 524px) {
        .title {
            font-size: 45px;
            line-height: 45px;
            padding-top: 5px;
            text-align: center;
        }

        .subtitle {
            font-size: 18px;
            line-height: 18px;
            position: relative;
            top: -5px;
            left: 14px;
            text-align: center;
        }

        @media screen and (max-width: 359px) {
            .title {
                font-size: 40px;
                line-height: 40px;
            }

            .subtitle {
                top: -11px;
                font-size: 15px;
            }
        }
    }

    @media screen and (min-width: 525px) {
    }
</style>

<div class="pagehead-wrap">
    <div class="title-wrap">
        <h1 class="title">
            <a href="/" style="text-decoration:none;">j konger</a>
        </h1>
    </div>

    <div class="subtitle-wrap">
        <h2 class="subtitle">{title}</h2>
    </div>
</div>
