---
import Navigation from "./Navigation.astro";
---

<style>
    header {
        z-index: -1;
    }

    @media screen and (max-width: 524px) {
        header {
            width: 100vw;
            height: 150px;
            background: url("img/side.jpg") center center;
        }
    }

    @media screen and (min-width: 525px) {
        header {
            position: fixed;
            left: 0;
            top: 0;
            width: 33.333vw;
            height: 100vh;
            background: url("img/side_large.jpg");
            background-size: cover;
        }
    }
</style>

<header>
    <Navigation />
</header>
