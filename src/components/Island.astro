---
const { hideShadow, noPadding, bottomMargin, class: className } = Astro.props;
---

<div
    class:list={[
        className,
        "island",
        { "with-shadow": !hideShadow },
        { "with-padding": !noPadding },
        { "bottom-margin": bottomMargin },
    ]}
>
    <slot />
</div>

<style>
    .island {
        display: flex;
        border: 1px solid var(--color-foreground);

        &.with-padding {
            padding: 0.5rem;
        }

        &.bottom-margin {
            margin-bottom: 1.5rem;
        }
    }
</style>
