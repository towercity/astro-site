---
import ContentBlock from "./ContentBlock.astro";

const {collection, title} = Astro.props
---

<ContentBlock title={title} isContainer>
	<div class="book-grid">
	{
		collection.map((book) => {
		  const {
			data: { title, author, finished, cover },
			id,
		  } = book;
		  return (
			<div class="book">
			  {cover &&
				<img src={cover}></img>
			  }
			  <div class="insert">
				{title}, by {author}
			  </div>
			</div>
		  );
		})
	 }
	</div>
</ContentBlock>


<style>
.book-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;

    .book {
        width: 150px;
		min-height: 225px;
        overflow: hidden;
        position: relative;
        
        @container (width < 355px) {
            width: 100cqw;
            min-height: 150cqw;
        }
        

        img {
          z-index: 2;
          position: relative;
          transition: opacity 0.2s ease-in;
          width: 100%;
          height: 100%;
          object-fit: cover;

          &:hover {
            opacity: 0;
          }
        }

        .insert {
            border: 1px solid var(--color-foreground);
            height: 100%;
            width: 100%;
            padding: 0.5em;
            text-align: center;
            position: absolute;
            top: 0;
            z-index: 1;
            overflow: clip;
        }
    }
}
</style>
